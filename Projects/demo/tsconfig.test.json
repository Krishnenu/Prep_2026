{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "types": [
            "vite/client",
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": false,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/setupTests.ts"
    ]
}